<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator BMI"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCalculateBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oblicz BMI"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCalculateCalories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oblicz kalorie"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnDietRecommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Przepisy dietetyczne"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnShoppingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista zakupÃ³w"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnBMIChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wykres zmian BMI"
        android:layout_marginBottom="16dp"/>

</LinearLayout>